<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto" >
    <data>
        <variable
            name="characterStats"
            type="com.viktordikov.betrayalcharacterstats.Data.CharacterStats"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/dscr_character"
        android:gravity="top|left"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivCharacter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/dscr_character"
            android:scaleType="center" />
            <!--android:src="@drawable/char_blue_madame_zostra" />-->

        <include layout="@layout/fragment_character_pins" android:id="@+id/pins" />

        <include layout="@layout/fragment_character_info_wrapper" bind:stats="@{characterStats}" />

    </RelativeLayout>

</layout>